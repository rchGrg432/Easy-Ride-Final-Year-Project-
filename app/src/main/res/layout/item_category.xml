<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryItemLL"
    android:layout_width="160dp"
    android:layout_height="230dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="220dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginLeft="@dimen/margin_five">

        <RelativeLayout
            android:id="@+id/categoryItemRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/categoryCV"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

<!--                <ImageView-->
<!--                    android:id="@+id/productIV"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:scaleType="fitXY" />-->
                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/city" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/catNameTV"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryCV"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="City Cycle"
                android:textColor="@color/black"
                android:textSize="15sp" />

<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/productNameTV"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:orientation="horizontal">-->

<!--                <TextView-->
<!--                    android:id="@+id/discountPriceTV"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginLeft="14dp"-->
<!--                    android:fontFamily="@font/sofiaprosoft"-->
<!--                    android:text="180"-->
<!--                    android:textColor="@color/primaryColor"-->
<!--                    android:textSize="15dp"-->
<!--                    android:textStyle="bold" />-->
<!--            </RelativeLayout>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>





