<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCycleCV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/normaLspacing"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/margin_five"
        app:cardElevation="@dimen/margin_five"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/cycleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/city"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/cycleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_five"
            android:background="@color/bgcolor"
            android:text="Mach City Cycle"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:textStyle="normal"
            android:fontFamily="@font/poppins"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>