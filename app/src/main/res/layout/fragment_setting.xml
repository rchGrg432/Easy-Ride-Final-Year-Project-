<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F1F1F1"
    tools:context=".home.fragments.SettingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="More"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="@color/third"
        android:textStyle="normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECECEC"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normaLspacing"
        android:elevation="@dimen/margin_five"
        app:cardCornerRadius="15dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profileRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/normaLspacing"
            android:background="@drawable/box_shape"
            android:padding="@dimen/normaLspacing"
            android:backgroundTint="#f1f1f1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight = "true"
                android:src="@drawable/ic_baseline_arrow_right_24"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/normaLspacing"
            android:layout_marginRight="@dimen/normaLspacing"
            android:layout_marginBottom="@dimen/normaLspacing"
            android:background="@drawable/box_shape"
            android:padding="@dimen/normaLspacing"
            android:backgroundTint="#f1f1f1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride History"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight = "true"
                android:src="@drawable/ic_baseline_arrow_right_24"/>


        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/normaLspacing"
                android:layout_marginRight="@dimen/normaLspacing"
                android:layout_marginBottom="@dimen/normaLspacing"
                android:background="@drawable/box_shape"
                android:padding="@dimen/normaLspacing"
                android:backgroundTint="#f1f1f1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAQs'"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight = "true"
                    android:src="@drawable/ic_baseline_arrow_right_24"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/normaLspacing"
                android:layout_marginRight="@dimen/normaLspacing"
                android:layout_marginBottom="@dimen/normaLspacing"
                android:background="@drawable/box_shape"
                android:padding="@dimen/normaLspacing"
                android:backgroundTint="#f1f1f1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Privacy Policy"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight = "true"
                    android:src="@drawable/ic_baseline_arrow_right_24"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/normaLspacing"
                android:layout_marginRight="@dimen/normaLspacing"
                android:layout_marginBottom="@dimen/normaLspacing"
                android:background="@drawable/box_shape"
                android:padding="@dimen/normaLspacing"
                android:backgroundTint="#f1f1f1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight = "true"
                    android:src="@drawable/ic_baseline_arrow_right_24"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contactUsRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/normaLspacing"
                android:layout_marginRight="@dimen/normaLspacing"
                android:layout_marginBottom="@dimen/normaLspacing"
                android:background="@drawable/box_shape"
                android:padding="@dimen/normaLspacing"
                android:backgroundTint="#f1f1f1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight = "true"
                    android:src="@drawable/ic_baseline_arrow_right_24"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/AboutUS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/normaLspacing"
                android:layout_marginRight="@dimen/normaLspacing"
                android:layout_marginBottom="@dimen/normaLspacing"
                android:background="@drawable/box_shape"
                android:padding="@dimen/normaLspacing"
                android:backgroundTint="#f1f1f1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight = "true"
                    android:src="@drawable/ic_baseline_arrow_right_24"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logOutRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/normaLspacing"
                android:layout_marginRight="@dimen/normaLspacing"
                android:layout_marginBottom="@dimen/normaLspacing"
                android:background="@drawable/rectangle_box"
                android:padding="@dimen/normaLspacing"
                android:backgroundTint="@color/third"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

<!--                <ImageView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight = "true"-->
<!--                    android:src="@drawable/ic_baseline_arrow_right_24"/>-->


            </RelativeLayout>

            <TextView
                android:id="@+id/adminAreaTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normaLspacing"
                android:background="@drawable/box_shape_selected"
                android:backgroundTint="#F1F1F1"
                android:drawableRight="@drawable/ic_baseline_admin_panel_settings_24"
                android:drawableTint="@color/third"
                android:padding="@dimen/normaLspacing"
                android:text="Admin Area"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="gone"/>

<!--                android:id="@+id/adminAreaTV"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="@dimen/normaLspacing"-->
